{
    "name":"§dGravity Manipulation",
    "description":"§fThe generation of a singularity that drastically changed the magnitude of gravity in local space.§r §e[Save Toolbar Activator]",
    "type":"origins:active_self",
    "entity_action":{
       "type":"origins:if_else",
       "condition":{
          "type":"origins:resource",
          "resource":"voidwalker:void_energy_resource",
          "comparison":">=",
          "compare_to":100
       },
       "if_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:change_resource",
                "resource":"voidwalker:void_energy_resource",
                "change":-100,
                "operation":"add"
             },
             {
                "type":"origins:execute_command",
                "command":"tag @s add voidwalker_gravity_manipulation.actor"
             },
             {
                "type":"origins:play_sound",
                "sound":"minecraft:entity.evoker.prepare_attack",
                "volume":0.20,
                "pitch":0.50
             },
             {
               "type": "origins:execute_command",
					"command": "summon minecraft:armor_stand ~ ~ ~ {Invisible:1b,Invulnerable:1b,NoGravity:1b,Tags:[\"voidwalker_gravity_manipulation.summon\"],DisabledSlots:4144959}"
             },
             {
               "type": "origins:execute_command",
               "command": "power grant @e[type=minecraft:armor_stand,tag=voidwalker_gravity_manipulation.summon,sort=nearest,limit=1] voidwalker:gravity_manipulation_armor_stand_effects"
             },
             {
                "type":"origins:apply_effect",
                "effect":{
                   "effect":"minecraft:slowness",
                   "amplifier":5,
                   "duration":200,
                   "is_ambient":false,
                   "show_icon":true,
                   "show_particles":false
                }
             },
             {
                "type":"origins:delay",
                "action":{
                   "type":"origins:execute_command",
                   "command":"tag @s remove voidwalker_gravity_manipulation.actor"
                },
                "ticks":250
             }
          ]
       },
       "else_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:damage",
                "amount":8,
                "damage_type":"minecraft:magic"
             },
             {
                "type":"origins:execute_command",
                "command":"tag @s add voidwalker_gravity_manipulation.actor"
             },
             {
                "type":"origins:play_sound",
                "sound":"minecraft:entity.evoker.prepare_attack",
                "volume":0.20,
                "pitch":0.50
             },
             {
                "type":"origins:spawn_entity",
                "entity_type":"minecraft:armor_stand",
                "tag":"{NoGravity:1,Invisible:1,Invulnerable:1}",
                "entity_action":{
                   "type":"origins:grant_power",
                   "power":"voidwalker:gravity_manipulation_armor_stand_effects",
                   "source":"voidwalker:gravity_manipulation_armor_stand_effects"
                }
             },
             {
                "type":"origins:apply_effect",
                "effect":{
                   "effect":"minecraft:slowness",
                   "amplifier":5,
                   "duration":200,
                   "is_ambient":false,
                   "show_icon":true,
                   "show_particles":false
                }
             },
             {
                "type":"origins:delay",
                "action":{
                   "type":"origins:execute_command",
                   "command":"tag @s remove voidwalker_gravity_manipulation.actor"
                },
                "ticks":250
             }
          ]
       }
    },
    "cooldown":1,
    "hud_render":{
       "should_render":false
    },
    "key":{
       "key":"key.saveToolbarActivator",
       "continuous":false
    }
}