{
   "name":"§dLevitation",
   "description":"§fGravity bends to your will! You have the capability to levitate freely in space, creating your own leverage from nothing.§r §e[Secondary]",
   "badges":[
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/toggle.png",
         "text":[
            "Toggleable with [",
            {
               "keybind":"key.origins.secondary_active"
            },
            "] key."
         ]
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":[
            "To ascend, simply press or hold the [",
            {
               "keybind":"key.jump"
            },
            "] key; to descend, hold [",
            {
               "keybind":"key.sneak"
            }
         ]
      }
   ],
   "type":"origins:multiple",
   "toggle":{
      "type":"origins:toggle",
      "active_by_default":false,
      "key":{
         "key":"key.origins.secondary_active",
         "continuous":false
      },
      "retain_state":false
   },
   "climb_up":{
      "type":"origins:climbing",
      "allow_holding":false,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"voidwalker:levitation_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            }
         ]
      }
   },
   "hover":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:levitation",
            "duration":10,
            "amplifier":-1,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:levitation"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"voidwalker:levitation_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "hover_down":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:slow_falling",
            "duration":10,
            "amplifier":0,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:slow_falling"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"voidwalker:levitation_toggle",
               "inverted":false
            },
            {
               "type":"origins:or",
               "conditions":[
                  {
                     "type":"origins:sprinting"
                  },
                  {
                     "type":"origins:sneaking"
                  }
               ]
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "void_energy_depletion":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:if_else",
         "condition":{
            "type":"origins:resource",
            "resource":"voidwalker:void_energy_resource",
            "comparison":">=",
            "compare_to":2
         },
         "if_action":{
            "type":"origins:change_resource",
            "resource":"voidwalker:void_energy_resource",
            "change":-2
         },
         "else_action":{
            "type":"origins:damage",
            "amount":1,
            "damage_type":"minecraft:magic"
         }
      },
      "rising_action":{
         "type":"origins:play_sound",
         "sound":"minecraft:entity.illusioner.cast_spell",
         "volume":1.00,
         "pitch":0.50
      },
      "interval":20,
      "condition":{
         "type":"origins:power_active",
         "power":"voidwalker:levitation_toggle"
      }
   },
   "air_affinity":{
      "type":"origins:modify_break_speed",
      "block_condition":{
         "type":"origins:block",
         "block":"minecraft:air",
         "inverted":true
      },
      "modifier":{
         "operation":"multiply_total",
         "value":5
      },
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:on_block",
               "inverted":true
            },
            {
               "type":"origins:block_collision",
               "offset_x":0.0,
               "offset_y":-0.1,
               "offset_z":0.0,
               "inverted":true
            },
            {
               "type":"origins:power_active",
               "power":"voidwalker:levitation_toggle"
            }
         ]
      }
   }
}